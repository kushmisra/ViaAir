<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="air.rishab.com.viaair.MainActivity">

    <Button
        android:id="@+id/buttonScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan/Enter PNR"
        android:onClick="qrScanner"
        android:layout_marginBottom="49dp"
        android:background="#934584"
        android:textColor="#ffffff"
        android:padding="5dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/buttonMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maps"
        android:onClick="mapping"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_below="@+id/imageView4"
        android:layout_toEndOf="@+id/buttonScan"
        android:layout_marginStart="14dp"
        android:layout_alignBottom="@+id/textView" />

    <Button
        android:id="@+id/buttonConnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="#387AFF"
        android:onClick="webview"
        android:padding="10dp"
        android:text="Connect with others"
        android:textColor="#ffffff"
        android:textSize="17dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="450dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/bpass"
        android:onClick="qrScanner"
        android:layout_marginTop="31dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/lens"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airport Lens"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView2"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:onClick="mapping"
        app:srcCompat="@drawable/way"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp" />
</RelativeLayout>
